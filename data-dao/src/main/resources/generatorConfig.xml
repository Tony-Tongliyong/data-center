<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE generatorConfiguration
        PUBLIC "-//mybatis.org//DTD MyBatis Generator Configuration 1.0//EN"
        "http://mybatis.org/dtd/mybatis-generator-config_1_0.dtd">

<generatorConfiguration>
    <properties resource="jdbc.properties"/>

    <context id="Mysql" targetRuntime="MyBatis3Simple" defaultModelType="flat">
        <!-- tk.mybatis配置 -->
        <property name="javaFileEncoding" value="UTF-8"/>
        <property name="beginningDelimiter" value="`"/>
        <property name="endingDelimiter" value="`"/>
        <plugin type="tk.mybatis.mapper.generator.MapperPlugin">
            <property name="mappers" value="com.tong.mybatis.plugin.TkMybatisMapper"/>
        </plugin>

        <!-- 数据库链接 -->
        <jdbcConnection driverClass="${datasource.druid.driver-class-name}"
                        connectionURL="${datasource.druid.url}"
                        userId="${datasource.druid.username}"
                        password="${datasource.druid.password}">
        </jdbcConnection>

        <!--&lt;!&ndash; 数据库链接 &ndash;&gt;-->
        <!--<jdbcConnection driverClass="com.mysql.jdbc.Driver"-->
                        <!--connectionURL="jdbc:mysql://localhost:3306/clean"-->
                        <!--userId="root"-->
                        <!--password="root">-->
        <!--</jdbcConnection>-->
        <!-- 生成实体类的包名和位置 -->
        <javaModelGenerator targetPackage="com.shuzheng.legalpersondb.dao.entity" targetProject="C:\Users\54192\IdeaProjects\legal_person_db\data-dao\src\main\java"/>
        <!-- 生成的映射文件包名和位置 -->
        <sqlMapGenerator targetPackage="com.shuzheng.legalpersondb.dao.xml" targetProject="C:\Users\54192\IdeaProjects\legal_person_db\data-dao\src\main\java"/>
        <!-- 生成DAO的包名和位置 -->
        <javaClientGenerator targetPackage="com.shuzheng.legalpersondb.dao.mapper" targetProject="C:\Users\54192\IdeaProjects\legal_person_db\data-dao\src\main\java" type="XMLMAPPER"/>

        <!-- 要生成的那些表 -->
        <table tableName="mapping_relation" domainObjectName="MappingRelation">
            <generatedKey column="id" sqlStatement="Mysql" identity="true"/>
        </table>
    </context>
</generatorConfiguration>